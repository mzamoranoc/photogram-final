<h1>Welcome to Photogram</h1>

<% if user_signed_in? %>
  <h2>Add a New Photo</h2>
  <%= render 'photos/form', photo: Photo.new %>
<% end %>

<h1>List of Users</h1>

<table border="1">
  <tr>
    <th>Username</th>
    <th>Private?</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.private? ? 'Yes' : 'No' %></td>
      <td><%= link_to 'Show details', user_path(user.username) %></td>
    </tr>
  <% end %>
</table>
