<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Private?</th>
      <th>Profile</th>
      <% if user_signed_in? %>
        <th>Action</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.private? ? 'Yes' : 'No' %></td>
        <td><%= button_to 'View Profile', user_path(user.username) %></td>
        <% if user_signed_in? && current_user != user %>
          <td>
            <% if current_user.following?(user) %>
              <%= button_to 'Unfollow', unfollow_request_user_path(user.username), method: :delete %>
            <% elsif current_user.follow_request_pending?(user) %>
              Request sent | <%= button_to 'Cancel', cancel_follow_request_user_path(user.username), method: :delete %>
            <% else %>
              <%= button_to 'Follow', follow_request_user_path(user.username), method: :post %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
